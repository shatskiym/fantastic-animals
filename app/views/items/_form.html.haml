= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :characteristic
    = f.text_field :characteristic
  .actions
    = f.submit 'Save'
