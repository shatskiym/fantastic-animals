= form_for @animal do |f|
  - if @animal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@animal.errors.count, "error")} prohibited this animal from being saved:"
      %ul
        - @animal.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :element
    = f.text_field :element
  .field
    = f.label :power_type
    = f.text_field :power_type
  .field
    = f.label :life
    = f.number_field :life
  .field
    = f.label :will
    = f.number_field :will
  .actions
    = f.submit 'Save'
