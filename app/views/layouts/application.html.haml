!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type", 'width': 'device-width', 'initial-scale': '1.0'}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : "Goodsport"
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Animals'}"}
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    %header
      = render 'layouts/navigation'
    %main{role: 'main', id: 'main-container'}
      = yield
